{
  "name": "littlechildwriter",
  "description": "Source code for littlechildwriter.web.app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "nuxi dev",
    "generate": "nuxi generate --modern=server",
    "analyze": "nuxi build --modern=server --analyze",
    "envbuild": "export TERM=xterm && yarn install --frozen-lockfile && yarn generate",
    "gui": "vue ui",
    "prettier": "prettier --write .",
    "lint": "eslint --ext .ts,.js,.vue .",
    "lint:fix": "eslint --ext .ts,.js,.vue . --fix",
    "e2e": "cypress open"
  },
  "dependencies": {
    "@nuxtjs/pwa": "latest",
    "eslint-plugin-nuxt": "^4.0.0",
    "firebase": "latest",
    "leo-profanity": "^1.6.1",
    "nuxt-edge": "latest",
    "vue-toastification": "^1.7.14",
    "vuetify": "latest"
  },
  "devDependencies": {
    "@nuxt/bridge": "npm:@nuxt/bridge-edge",
    "@nuxt/types": "^2.15.8",
    "@nuxtjs/eslint-config-typescript": "^11.0.0",
    "@nuxtjs/google-analytics": "latest",
    "@nuxtjs/vuetify": "latest",
    "cypress": "^10.8.0",
    "eslint": "latest",
    "firebase-admin": "latest",
    "typescript": "latest"
  }
